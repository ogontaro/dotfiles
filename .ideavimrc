set encoding=utf-8
set fileencodings=iso-2022-jp,euc-jp,sjis,utf-8
set fileformats=unix,dos,mac

nnoremap <Tab> >>_
nnoremap <S-Tab> <<_
inoremap <S-Tab> <C-D>
vnoremap <Tab> >gv
vnoremap <S-Tab> <gv

set clipboard=unnamed
" 現在のモードをステータスバーに表示
set showmode

" enable vim surround
set surround

set easymotion
" sで開始
nmap s <Plug>(easymotion-s2)
